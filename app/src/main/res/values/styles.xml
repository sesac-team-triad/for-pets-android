<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Pet_TextView_MiddleBlack" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Pet_TextView_LargeBlack" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Pet_TextView_XLargeBlack" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Extended Floating Action Button -->
    <style name="Pet_Fab_Color" parent="Widget.Material3.ExtendedFloatingActionButton.Primary">
        <item name="iconTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Animal Detail information -->
    <style name="Pet_ImageView_Radius30">
        <item name="cornerSize">30dp</item>
    </style>

    <style name="Pet_EditText_MiddleBlack" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Date Picker -->
    <style name="Pet_DatePicker_CalendarSmall" parent="@style/ThemeOverlay.Material3.MaterialCalendar">
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Material3.Corner.Small</item>
    </style>
