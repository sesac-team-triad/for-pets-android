<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/transportFragment">

    <fragment
        android:id="@+id/transportFragment"
        android:name="com.teamtriad.forpets.TransportFragment"
        android:label="fragment_transport"
        tools:layout="@layout/fragment_transport">
        <action
            android:id="@+id/action_transportFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/adoptFragment"
        android:name="com.teamtriad.forpets.AdoptFragment"
        android:label="fragment_adopt"
        tools:layout="@layout/fragment_adopt" />
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.teamtriad.forpets.ChatFragment"
        android:label="fragment_chat"
        tools:layout="@layout/fragment_chat" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.teamtriad.forpets.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.teamtriad.forpets.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_transportFragment"
            app:destination="@id/transportFragment" />
    </fragment>
</navigation>